<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="flash flash-alert">
      <h3><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h3>
      <ul style="margin-top: 0.5rem; margin-left: 1.5rem;">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter your post title..." %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, placeholder: "Write your post content...", rows: 12 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
